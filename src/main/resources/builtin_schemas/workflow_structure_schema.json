{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "nodes"
  ],
  "properties": {
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/workflowNode"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "alias": {
          "type": "object"
        },
        "nodeDependency": {
          "type": "object"
        },
        "nodeConsumer": {
          "type": "object"
        }
      }
    }
  },

  "definitions": {
    "workflowNode": {
      "type": "object",
      "required": [
        "key",
        "type"
      ],
      "properties": {
        "key": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "type": {
          "type": "string"
        },
        "pluginNode": {
          "type": "object",
          "required": [
            "pluginId",
            "nodeId"
          ],
          "properties": {
            "pluginId": {
              "type": "string"
            },
            "nodeId": {
              "type": "string"
            }
          }
        },
        "next": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "config": {
          "type": "object",
          "properties": {
            "input": {
              "type": "object"
            },
            "output": {
              "type": "object"
            }
          }
        },
        "metadata": {
          "type": "object"
        },
        "policy": {
          "type": "object"
        }
      }
    }
  }
}