{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Plugin Node Configuration Schema",
  "definitions": {
    "secret": {
      "type": "object",
      "title": "Secret Definition",
      "properties": {
        "key": {
          "type": "string",
          "title": "Secret Key",
          "description": "Environment key of the secret.",
          "pattern": "^[A-Z0-9_]+$",
          "minLength": 3,
          "maxLength": 64
        },
        "required": {
          "type": "boolean",
          "title": "Is Required",
          "default": true,
          "description": "Whether this secret must be provided."
        },
        "description": {
          "type": "string",
          "title": "Secret Description",
          "description": "Explanation of what this secret is used for."
        },
        "inject_as": {
          "type": "string",
          "title": "Inject As",
          "enum": ["header", "query", "body"],
          "default": "header",
          "description": "How to inject the secret into the request."
        }
      },
      "required": ["key"],
      "additionalProperties": false
    }
  },
  "properties": {
    "input": {
      "type": "object",
      "title": "Input Schema"
    },
    "output": {
      "type": "object",
      "title": "Output Schema"
    },
    "secrets": {
      "type": "array",
      "title": "Secrets",
      "description": "Secrets to inject into the HTTP request.",
      "minItems": 0,
      "items": { "$ref": "#/definitions/secret" }
    },
    "profiles": {
      "type": "array",
      "title": "Profiles",
      "description": "Groups of secrets that can be reused across nodes.",
      "minItems": 0,
      "items": {
        "type": "object",
        "title": "Profile Definition",
        "properties": {
          "name": {
            "type": "string",
            "title": "Profile Name",
            "description": "Name of the secret profile."
          },
          "required": {
            "type": "boolean",
            "title": "Is Required",
            "default": true,
            "description": "Whether this profile must be provided."
          },
          "description": {
            "type": "string",
            "title": "Profile Description",
            "description": "Explanation of what this profile is used for."
          },
          "items": {
            "type": "array",
            "title": "Profile Items",
            "description": "Secrets included in this profile.",
            "minItems": 1,
            "items": { "$ref": "#/definitions/secret" }
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    }
  },
  "required": ["input", "output", "secrets"],
  "additionalProperties": false
}
