{
  "": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Plugin Schema Definition Schema",
  "properties": {
    "profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "defaults": { "type": "object" },
          "schema": { "type": "object" },
          "requiresPreparation": { "type": "boolean" }
        },
        "required": ["id", "label"],
        "additionalProperties": true
      }
    },
    "profile": {
      "type": "object"
    },
    "properties": {
      "type": "object",
      "properties": {
        "profile": { "type": "object" }
      },
      "required": ["profile"],
      "additionalProperties": true
    }
  },
  "anyOf": [
    { "required": ["profiles"] },
    { "required": ["properties"] }
  ],
  "additionalProperties": true
}
