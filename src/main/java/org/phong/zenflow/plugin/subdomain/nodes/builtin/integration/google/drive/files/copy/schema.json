{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Google Drive Copy File Schema",
  "properties": {
    "input": {
      "type": "object",
      "title": "Input Schema",
      "properties": {
        "profile": {
          "type": "string",
          "description": "Secret profile group name containing OAuth credentials"
        },
        "fileId": {
          "type": "string",
          "description": "ID of the file to copy"
        },
        "destinationFolderId": {
          "type": "string",
          "description": "ID of the folder where the copied file will be placed"
        },
        "name": {
          "type": "string",
          "description": "New name for the copied file"
        }
      },
      "required": [
        "profile",
        "fileId"
      ],
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "title": "Output Schema"
    },
    "profile": {
      "$ref": "plugin:profile"
    }
  },
  "required": [
    "input",
    "output"
  ],
  "additionalProperties": false
}
