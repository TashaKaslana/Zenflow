{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "input"
  ],
  "properties": {
    "input": {
      "type": "object",
      "required": [
        "text"
      ],
      "properties": {
        "flag": {
          "type": "boolean",
          "description": "Processing flag"
        },
        "text": {
          "type": "string",
          "description": "Text to process"
        },
        "count": {
          "type": "integer",
          "description": "Number of operations"
        }
      },
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "properties": {
        "result": {
          "type": "string"
        },
        "processed_count": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}