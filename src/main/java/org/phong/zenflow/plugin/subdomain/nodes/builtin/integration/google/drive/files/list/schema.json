{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Google Drive List Files Schema",
  "properties": {
    "input": {
      "type": "object",
      "title": "Input Schema",
      "properties": {
        "profile": {
          "type": "string",
          "description": "Secret profile group name containing OAuth credentials"
        },
        "query": {
          "type": "string",
          "description": "Search query (default: trashed=false)",
          "default": "trashed=false"
        }
      },
      "required": [
        "profile"
      ],
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "title": "Output Schema"
    },
    "profile": {
      "$ref": "plugin:profile"
    }
  },
  "required": [
    "input",
    "output"
  ],
  "additionalProperties": false
}
