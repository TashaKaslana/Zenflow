{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Google Drive Update File Schema",
  "properties": {
    "input": {
      "type": "object",
      "title": "Input Schema",
      "properties": {
        "profile": {
          "type": "string",
          "description": "Secret profile group name containing OAuth credentials"
        },
        "fileId": {
          "type": "string",
          "description": "ID of the file to update"
        },
        "name": {
          "type": "string",
          "description": "New name for the file"
        },
        "description": {
          "type": "string",
          "description": "Description of the file"
        },
        "mimeType": {
          "type": "string",
          "description": "MIME type of the file"
        },
        "contentBase64": {
          "type": "string",
          "description": "Base64-encoded content to replace the file with"
        }
      },
      "required": [
        "profile",
        "fileId"
      ],
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "title": "Output Schema"
    },
    "profile": {
      "$ref": "plugin:profile"
    }
  },
  "required": [
    "input",
    "output"
  ],
  "additionalProperties": false
}
